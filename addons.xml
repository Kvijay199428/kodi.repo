<?xml version="1.0" encoding="UTF-8"?>
<addons>
	<addon id="kodi.repo" name="Kvijay Repo" version="2.0.0" provider-name="Kvijay">
		<extension point="xbmc.addon.repository" name="Kviijay Repo">
			<dir minversion="19.0">
				<info compressed="true">https://raw.githubusercontent.com/Kvijay199428/kodi.repo/main/addons.xml</info>
				<checksum>https://raw.githubusercontent.com/Kvijay199428/kodi.repo/main/addons.xml.gz.md5</checksum>
				<datadir zip="true">https://raw.githubusercontent.com/Kvijay199428/kodi.repo/main/kodi.repo</datadir>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>Kvijay Repo for Kodi</summary>
			<description>A Repository for Streaming Add-ons of Indian OTT Providers</description>
			<platform>all</platform>
			<assets>
				<icon>resources/icon.png</icon>
				<fanart>resources/fanart.jpg</fanart>
				<clearlogo>resources/icon2.png</clearlogo>
			</assets>
		</extension>
	</addon>

	<addon id="repo.jiotv" name="JioTV" version="2.3.0" provider-name="Kvijay">
		<requires>
			<import addon="xbmc.python" version="3.0.0"/>
			<import addon="script.module.codequick" version="1.0.2"/>
			<import addon="script.module.inputstreamhelper" version="0.5.10"/>
			<import addon="inputstream.adaptive" minversion="2.6.6"/>
			<import addon="kodi.repo" version="2.0.0"/>
		</requires>
		<extension point="xbmc.python.pluginsource" library="addon.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.service" library="service.py"/>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Stream Live Indian Channels From JioTV on Kodi</summary>
			<description lang="en_GB">Enjoy Live TV experience in Kodi.</description>
			<language>en</language>
			<platform>all</platform>
			<license>MIT</license>
			<disclaimer>This plugin is not officially commissioned/supported by Jio. The trademark "Jio" is registered by "Reliance Corporate IT Park Limited (RCITPL)"</disclaimer>
			<assets>
				<icon>resources/icon.png</icon>
				<fanart>resources/fanart.png</fanart>
				<screenshot>resources/screenshots/screenshot000.png</screenshot>
				<screenshot>resources/screenshots/screenshot001.png</screenshot>
				<screenshot>resources/screenshots/screenshot002.png</screenshot>
			</assets>
			<reuselanguageinvoker>true</reuselanguageinvoker>
		</extension>
	</addon>
</addons>